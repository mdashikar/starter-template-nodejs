SMTP_HOST=email-server
SMTP_PORT=587
SMTP_AUTH_USER=smtp-auth-user
SMTP_AUTH_PASSWORD=smtp-auth-password
MAIL_FORM=support@domain.com

GOOGLE_OAUTH_CID=

