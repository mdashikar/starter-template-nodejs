{
  "name": "create-starter-template-nodejs",
  "version": "1.1.2",
  "description": "Create a Node.js app for building production-ready RESTful APIs using Express, MongoDb, and Mongoose",
  "bin": {
    "create-starter-template-nodejs": "bin/createApp.js"
  },
  "main": "src/index.js",
  "repository": "https://github.com/mdashikar/starter-template-nodejs",
  "author": "Md Ashiqur Rahman <md.ashik.ar@gmail.com>",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --check **/*.js"
  },
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "nodemon -L src/index.js",
    "test": "cross-env NODE_ENV=test jest ./test",
    "test:watch": "cross-env NODE_ENV=test jest ./test --watch --colors --verbose",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev:rebuild": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml build --no-cache",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:dev:down": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down --remove-orphans",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "test:docker": "docker-compose --file docker-compose.test.yml up --abort-on-container-exit --exit-code-from nodejs-starter",
    "test:docker:rebuild": "docker-compose --file docker-compose.test.yml build --no-cache",
    "posttest:docker": "docker-compose --file docker-compose.test.yml down --remove-orphans",
    "prepare": "husky install"
  },
  "keywords": [
    "node",
    "node.js",
    "boilerplate",
    "express",
    "rest",
    "api",
    "mongodb",
    "mongoose",
    "es6",
    "es7",
    "es8",
    "es9",
    "jest",
    "docker",
    "jwt",
    "joi",
    "eslint",
    "prettier"
  ],
  "license": "ISC",
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.0.0",
    "google-auth-library": "^9.9.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.3.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "nodemon": "^3.1.0",
    "prettier": "^2.0.5",
    "supertest": "^7.0.0"
  }
}
